<div class= "container">
	
	<div class = "row" >
		<div class= "col-xs-12 text-center" id= "pic-section">
		<img src="/assets/img/burger.png" alt="burger"  />
		<h1>Eat-Da-Burger! </h1>
	</div>
	
	<div class = row">
	  <div class="col-md-5" class="deliver">
		
  		     <ul>
				{{#each burgers}}
					{{#unless this.devoured}}
					
						<li>
						  <div class = row>
						    <div class="col-xs-9">
							<h5>{{this.id}}. {{this.burger_name}}
							 </div>
							 <div class="col-xs-3" text-center>	
								<form action='burger/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<button type='submit' class="btn btn-default">Devoured it!</button>
								</form>
							  </div>
							</h5>
						   </div>
						</li>
						
					{{/unless}}
				{{/each}}
			</ul>
 		 </div>
